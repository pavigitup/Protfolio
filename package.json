{
  "dependencies": {
    "tailwindcss": "^3.3.3"
  },
  "devDependencies": {
    "copyfiles": "^2.4.1"
  },
  "scripts": {
    "dev": "tailwindcss -i ./src/input.css -o ./src/output.css --watch",
    "build": "tailwindcss -i ./src/input.css -o ./src/output.css --minify && npm run copy-assets",
    "copy-assets": "copyfiles -u 1 src/assets/**/* src"
  }
}